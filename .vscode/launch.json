{
    // Verwendet IntelliSense zum Ermitteln möglicher Attribute.
    // Zeigen Sie auf vorhandene Attribute, um die zugehörigen Beschreibungen anzuzeigen.
    // Weitere Informationen finden Sie unter https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "dezog",
            "request": "launch",
            "name": "zsim",
            "remoteType": "zsim",
            "zsim": {
                "Z80N": true,
            },
            "listFiles": [
                {
                    "path": "out/dezogif.list",
                    "asm": "sjasmplus",
                    "mainFile": "main.asm",
                    "srcDirs": [
                        "src"
                    ]
                }
            ],
            "startAutomatically": false,
            "skipInterrupt": true,
            "commandsAfterLaunch": [
                //"-sprites",
                //"-patterns"
            ],
            "disassemblerArgs": {
                "esxdosRst": true
            },
            "rootFolder": "${workspaceFolder}",
            "topOfStack": "stack_top",
            "load": "out/dezogif.nex",
            "smallValuesMaximum": 513,
            "tmpDir": ".tmp"
        },


        {
            "type": "dezog",
            "request": "launch",
            "name": "ZEsarUX",
            "remoteType": "zrcp",
            "zrcp": {
                "hostname": "localhost",
                "port": 10000,
                "socketTimeout": 50
            },
            "zsim": {
                "Z80N": true,
            },
            "listFiles": [
                {
                    "path": "out/dezogif.list",
                    "asm": "sjasmplus",
                    "mainFile": "main.asm",
                    "srcDirs": [
                        "src"
                    ]
                }
            ],
            "startAutomatically": true,
            "skipInterrupt": true,
            "commandsAfterLaunch": [
                //"-sprites",
                //"-patterns"
                "-md 0x000 0x0100 0xC000 0x0100"
            ],
            "disassemblerArgs": {
                "esxdosRst": true
            },
            "rootFolder": "${workspaceFolder}",
            "topOfStack": "stack_top",
            "load": "out/dezogif.nex",
            "smallValuesMaximum": 513,
            "tmpDir": ".tmp"
        },

        {
            "type": "dezog",
            "request": "launch",
            "name": "CSpect",
            "remoteType": "cspect",
            "cspect": {
                "hostname": "localhost",
                "port": 11000,
                "socketTimeout": 50
            },
            "listFiles": [
                {
                    "path": "out/dezogif.list",
                    "asm": "sjasmplus",
                    "mainFile": "main.asm",
                    "srcDirs": [
                        "src"
                    ]
                }
            ],
            //"startAutomatically": false,
            "startAutomatically": true,
            "skipInterrupt": true,
            "commandsAfterLaunch": [
                //"-logpoint enable",
                "-assert enable",
                //"-logpoint enable DEFAULT"
                "-md 0 100 0xc000 100 0x2000 100 0xe000 100"
            ],
            "disassemblerArgs": {
                "esxdosRst": true
            },
            "rootFolder": "${workspaceFolder}",
            "topOfStack": "stack_top",
            "load": "out/dezogif.nex",
            "smallValuesMaximum": 513,
            "tmpDir": ".tmp"
        },


        {
            "type": "dezog",
            "request": "launch",
            "name": "Unit Tests",
            "unitTests": true,
            "remoteType": "zsim",
            "zsim": {
                "Z80N": true,
                "tbblueMemoryManagementSlots": true
            },
            "resetOnLaunch": true,
            "skipInterrupt": true,
            "commandsAfterLaunch": [
                "-wpmem enable",
                "-assert enable",
                "-logpoint enable", // Enable all logpoints, especially [UNITTEST]
            ],
            "disassemblerArgs": {
                "esxdosRst": true
            },
            "listFiles": [
                {
                    "path": "out/ut.list",
                    "asm": "sjasmplus",
                    "mainFile": "unit_tests/unit_tests.asm",
                    "srcDirs": [
                        "src"
                    ]
                }
            ],
            "rootFolder": "${workspaceFolder}",
            "load": "out/ut.nex",
        },

    ]
}